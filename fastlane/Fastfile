# fastlane/Fastfile
default_platform(:ios)

platform :ios do
  desc "Build iOS app for POC"
  lane :build do
    # Simple build without signing for POC
    build_app(
      project: "ios/SimpleApp.xcodeproj",
      scheme: "SimpleApp",
      configuration: "Release",
      export_method: "development"
    )
  end

  desc "Build and create IPA"
  lane :build_ipa do
    build_app(
      project: "ios/SimpleApp.xcodeproj",
      scheme: "SimpleApp", 
      configuration: "Release",
      export_method: "development",
      output_directory: "./build",
      output_name: "SimpleApp.ipa"
    )
  end
end

